all:
  hosts:
    nginx:
      ansible_host: ${nginx_ip}
      ansible_user: ${nginx_user}
    python:
      ansible_host: ${python_ip}
      ansible_user: ${python_user}
    mariadb:
      ansible_host: ${mariadb_ip}
      ansible_user: ${mariadb_user}
  children:
    webservers:
      hosts:
        nginx:
        python:

    dbservers:
      hosts:
        mariadb:

    dc_aws:
      children:
        webservers:
        dbservers:
      vars:
        ansible_ssh_private_key_file: ${clientkey}.pem
